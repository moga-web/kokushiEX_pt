<div class="flex flex-grow min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="title-base"><%= t('devise.sessions.new.title') %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                         html: { class: 'mt-8 space-y-6 sm:mx-auto sm:w-full sm:max-w-md' }) do |f| %>
    <div class="rounded-md shadow-sm space-y-4">
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: t('devise.sessions.new.email'),
                                  class: 'form-input-base form-input-color focus-ring' %>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: 'current-password',
                                        placeholder: t('devise.sessions.new.password'),
                                        class: 'form-input-base form-input-color focus-ring' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex justify-between items-center">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'h-4 w-4 text-sky-600 focus:ring-sky-500 border-gray-300 rounded' %>
          <%= f.label :remember_me, t('devise.sessions.new.remember_me'),
                      class: 'ml-2 block text-sm leading-5 text-gray-900' %>
        </div>
        <div class="text-sm font-semibold text-sky-600 hover:text-orange-300">
          <%= link_to t('devise.shared.links.forgot_password'), new_password_path(resource_name) %>
        </div>
      </div>
    <% end %>

    <div class="button-base button-color focus-button-ring">
      <%= f.submit t('devise.sessions.new.submit') %>
    </div>
  <% end %>
</div>
