<div class="flex flex-wrap flex-grow text-gray-600 body-font">
    <div class="w-full max-w-4xl m-auto">
        <!-- 前回のレポートセクション -->
        <div class="flex mb-10">
            <div class="w-full h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden shadow-xl">
                <div class="m-5">
                    <h2>前回のレポート</h2>
                    <div class="text-center underline my-2 text-4xl text-sky-500">実施年度</div>
                    <div class="flex justify-around py-2">
                        <div class="flex flex-col items-center px-4 border-r border-gray-200">
                            <h3 class="text-3xl">共通</h3>
                            <div class="text-3xl text-sky-500">得点</div>
                        </div>
                        <div class="flex flex-col items-center px-4 border-r border-gray-200">
                            <h3 class="text-3xl">専門</h3>
                            <div class="text-3xl text-sky-500">得点</div>
                        </div>
                        <div class="flex flex-col items-center px-4 border-r border-gray-200">
                            <h3 class="text-3xl">実地</h3>
                            <div class="text-3xl text-sky-500">得点</div>
                        </div>
                        <div class="flex flex-col items-center px-4 border-r border-gray-200">
                            <h3 class="text-3xl">総得点</h3>
                            <div class="text-3xl text-sky-500">得点</div>
                        </div>
                        <div class="flex flex-col items-center px-4">
                            <h3 class="text-3xl">合格点</h3>
                            <div class="text-3xl text-sky-500">得点</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 学習進捗セクション -->
        <div class="flex">
            <div class="w-full h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden shadow-xl">
                <div class="m-5">
                    <h2>学習進捗</h2>
                    <div class="flex flex-wrap justify-around gap-20">
                        <div class="flex flex-col items-center">
                            <h3 class="text-3xl">受験済みのテスト</h3>
                            <%= image_tag 'circle1.png', size: 150 %>
                        </div>
                        <div class="flex flex-col items-center">
                            <h3 class="text-3xl">合格点超えのテスト</h3>
                            <%= image_tag 'circle2.png', size: 150 %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>